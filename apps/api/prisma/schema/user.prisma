model User {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String   @unique
  passwordHash String
  isStaff      Boolean  @default(false)
  moduleLeads  ModuleLead[]      @ignore
  userModules  UserModule[]      @ignore
  teamAllocations TeamAllocation[] @ignore
  reviewerAssessments PeerAssessment[] @relation("PeerAssessmentReviewer") @ignore
  revieweeAssessments PeerAssessment[] @relation("PeerAssessmentReviewee") @ignore
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
